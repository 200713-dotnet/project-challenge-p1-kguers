@model PizzaBox.Client.Models.UserViewModel

<h2> Order Directory</h2>
<section>
     <form action="/order/home">
     <button type="submit" name="name" value="@Model.Name">Add Pizza to Order</button>
     </form>
</section>

<section>
     <form action="/order/orderlist" method="get">
     <button type="submit" name="@Model.Name" value="@Model.Name">Check Order History</button>
     </form>
</section>

<section>
     <form action="/order/checkout" method="post">
     <button type="submit" name="@Model.Name" value="@Model.Name">Checkout</button>
     </form>
</section>