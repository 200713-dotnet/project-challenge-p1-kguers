@model PizzaBox.Client.Models.PizzaViewModel




<h3>Create Pizza for Order</h3>
<form action="/order/placeorder" method="post">
     @Html.AntiForgeryToken()
     @foreach(var crust in @Model.Crusts)
     {
          <input type="radio" name="crust" id="crust" value="@crust.Name" data-val="true" data-val-required=" The Crust field is required. ">
          <label for="Crust">@crust.Name</label>
     }
     @Html.ValidationMessageFor(m => m.Crust)


     <select name="size" id="">
          @foreach (var size in @Model.Sizes)
          {
               <option value="@size.Name">@size.Name</option>
               
          }
     </select>
     @Html.ValidationMessageFor(m => m.Size)
     
     <!--add radio of preset options -->
     @foreach(var top in @Model.Toppings)
     {
          <input type="checkbox" name="selectedtoppings" id="selectedtoppings" value="@top.Name">
          <label for="selectedtoppings">@top.Name</label>
          
     }
     @Html.ValidationMessageFor(m => m.SelectedToppings)

     <button type="submit" name="name" value="Custom">Add Custom Order</button>

</form>